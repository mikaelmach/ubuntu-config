        format = "%avail"
}

load {
        format = "CPU %1min"
}

memory {
        #format = "MEM %used / %available"
        format = "MEM %used"
        threshold_degraded = "1G"
        format_degraded = "MEMORY < %available"
}

tztime local {
        format = "%Y-%m-%d %H:%M:%S"
}
